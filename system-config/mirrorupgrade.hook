[Trigger]
Operation = Upgrade
Type = Package
Target = pacman-mirrorlist

[Action]
Description = Ranking mirrors due to mirrorlist update
When = PostTransaction
Depends = reflector
Exec = /bin/sh -c "reflector --country Denmark --country -Germany --country Netherlands --country Sweden --latest 200 --age 24 --sort rate --save /etc/pacman.d/mirrorlist; rm -f /etc/pacman.d/mirrorlist.pacnew"
