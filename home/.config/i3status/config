general {
    output_format = "i3bar"
    colors = true
    interval = 1
    separator = ""
}

order += "volume master"
order += "tztime local"

volume master {
    format = "Volume %volume"
    format_muted = "Volume muted (%volume)"
    device = "pulse"
    min_width = 100
    align = "right"
}
tztime local {
    min_width = 150
    format = "%a %d %b %H:%M:%S"
    align = "center"
}

